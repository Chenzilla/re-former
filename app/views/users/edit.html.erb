<h1>Users#edit</h1>
<p>Find me in app/views/users/edit.html.erb</p>

<%= form_for @user do |f| %> 
  <%= f.label :username, 'Username:' %>
  <%= f.text_field :username, value: "#{@user.username}" %> 

  <%= f.label :email, 'Email:' %>
  <%= f.text_field :email, value: "#{@user.email}" %>

  <%= f.label :password, 'Password:' %>
  <%= f.password_field :password, value: "#{@user.password}" %> 

  <%= f.submit 'Submit' %>
<% end %>
